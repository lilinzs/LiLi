<?xml version="1.0" encoding="utf-8"?>
<com.yueer.farmshop.kaoshitest.fragment.home.mycenter.HeadZoomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dzsv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mycenter_toolbar_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


        <Button
            android:id="@+id/mycenter_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:background="#aaa" />
    </LinearLayout>


</com.yueer.farmshop.kaoshitest.fragment.home.mycenter.HeadZoomScrollView>