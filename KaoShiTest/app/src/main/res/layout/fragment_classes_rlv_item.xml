<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/f_class_i_img"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/f_class_i_name"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/f_class_i_img" />

    <TextView
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:id="@+id/f_class_i_jieshao"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@+id/f_class_i_name"
        android:layout_toRightOf="@+id/f_class_i_img" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/f_class_i_jiage"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_below="@+id/f_class_i_jieshao"
        android:layout_toRightOf="@+id/f_class_i_img" />

    <CheckBox
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/f_class_i_cb"
        android:layout_alignParentRight="true"

        />
</RelativeLayout>